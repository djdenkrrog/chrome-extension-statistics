{
  "name": "Show request in console",
  "version": "0.1",
  "description": "The show request in console",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/bug_red.png",
    "48": "img/bug_red.png",
    "128": "img/bug_red.png"
  },
  "browser_action": {
    "default_icon": "img/bug_black.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "manifest_version": 2
}